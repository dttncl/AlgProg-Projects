using System;
using System.Collections.Generic;
using System.IO;
using System.Linq;
using System.Text;
using System.Threading.Tasks;

namespace prjConCsIntroduction
{
    internal class BasicOperator
    {
        static void MainBC(string[] args)
        {

            
            float val1, val2, result;
            bool resultB;

            Console.WriteLine("\tCALCULATOR");
            Console.WriteLine("\t____ ____");

            Console.Write("Enter value 1: ");
            val1 = float.Parse(Console.ReadLine());

            Console.Write("Enter value 2: ");
            val2 = float.Parse(Console.ReadLine());

            result = val1 + val2;
            Console.WriteLine("\nAddition of " + val1 + " and " + val2 + " is " + result);
            result = val1 - val2;
            Console.WriteLine("Subtraction of " + val1 + " and " + val2 + " is " + result);
            result = val1 * val2;
            Console.WriteLine("Multiplication of " + val1 + " and " + val2 + " is " + result); ;
            result = val1 / val2;
            Console.WriteLine("Division of " + val1 + " and " + val2 + " is " + result);
            result = val1 % val2;
            Console.WriteLine("Modulo of " + val1 + " and " + val2 + " is " + result);

            resultB = val1 > val2;
            Console.WriteLine("\n" + val1 + " greater than " + val2 + " is " + resultB);
            resultB = val1 < val2;
            Console.WriteLine(val1 + " smaller than " + val2 + " is " + resultB);
            resultB = val1 >= val2;
            Console.WriteLine(val1 + " greater than or equal to " + val2 + " is " + resultB);
            resultB = val1 <= val2;
            Console.WriteLine(val1 + " smaller than or equal to " + val2 + " is " + resultB);
            resultB = val1 == val2;
            Console.WriteLine(val1 + " equal to " + val2 + " is " + resultB);
            resultB = val1 != val2;
            Console.WriteLine(val1 + " different to " + val2 + " is " + resultB + "\n");
           

        }
    }
}
